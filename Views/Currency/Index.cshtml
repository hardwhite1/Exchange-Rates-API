@model TestMvc1.Models.ExchangeRatesResponse

@{
    ViewData["Title"] ="Exchange rates";
}

<h1>Exchange Rates (Base: @Model.Base)</h1>

<table class="table">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Rate</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var rate in Model.Rates)
        {
            <tr>
                <td>@rate.Key</td>
                <td>@rate.Value</td>
            </tr>
        }
    </tbody>

</table>

<a asp-action="Convert" class="btn btn-success">Currency Converter</a>

<div class="pagination">
    @if(Model.pagination != null && @Model.pagination.HasPreviousPage)
    {
        <a asp-action="Index" asp-route-currentPage="@(Model.pagination.CurrentPage-1)">Previous</a>
    }

    <span>Page @Model.pagination?.CurrentPage of @Model.pagination?.TotalPages</span>

    @if(Model.pagination != null && Model.pagination.HasNextPage)
    {
        <a asp-action="Index" asp-route-currentPage="@(Model.pagination.CurrentPage+1)">Next</a>
    }
</div>

